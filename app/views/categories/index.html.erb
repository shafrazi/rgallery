<h2>Categories</h2>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th>Category name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <% @categories.each do |category| %>
    <tr>
      <td>
        <%= category.name %>
      </td>
      <td>
        <%= link_to "Edit", edit_category_path(category), class: "btn btn-success" %> <%= link_to "Delete", category_path(category), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"}  %>
      </td>
    </tr>
  <% end %>
</table>
